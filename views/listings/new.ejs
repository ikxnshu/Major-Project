<% layout('layouts/boilerplate') -%>
<div class="row">
    <div class="col-8 offset-2">
        <br><br>
    <h1>Create a new listing</h1>
    <form method="post" action="/listings">

        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input name="listing[title]" placeholder="Add Title" type="text" class="form-control">
        </div>
        
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea name="listing[description]" placeholder="Add Description" class="form-control"></textarea>
        </div>
        
        <div class="mb-3">
            <label for="image" class="form-label">Image Link</label>
            <input name="listing[image]" placeholder="Add image URL/LINK" class="form-control">
        </div>
       
        <div class="row">
        <div class="mb-3 col-md-4">
            <label for="price" class="form-label">Price</label>
            <input name="listing[price]" placeholder="1200" class="form-control">
        </div>
        
        <div class="mb-3 col-md-8">
            <label for="country" class="form-label">Country</label>
            <input name="listing[country]" placeholder="India" class="form-control">
        </div>
        </div>
        
        <div class="mb-3">
            <label for="location" class="form-label">Location</label>
            <input name="listing[location]" placeholder="Uttarakhand" class="form-control">
        </div>

        <br>
        
        <button class="btn btn-dark">Add</button>
        <br><br>
    </form>
    </div>
</div>