<% layout('layouts/boilerplate') -%>
<div class="row mt-3">
  <div class="col-8 offset-3">
    <h1><%= listing.title %></h1>
  </div>

  <div class="card col-6 offset-3 listing-card">
    <img
      src="<%= listing.image.url %>"
      class="card-img-top show-img"
      alt="https://images.unsplash.com/photo-1602343168117-bb8ffe3e2e9f?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8NXx8dmlsbGF8ZW58MHx8MHx8fDA%3D&auto=format&fit=crop&w=800&q=60"
    />
    <div class="card-body">
      <p class="card-text">
        <%= listing.description %><br />
        &#8377;<%= listing.price.toLocaleString("en-IN") %><br />
        <%= listing.location %><br />
        <%= listing.country %><br />
      </p>
    </div>
  </div>
  <div class="btns">
    <a
      href="/listings/<%= listing._id %>/edit"
      class="btn2 btn-dark col-1 offset-3"
      >Edit</a
    >

    <form method="post" action="/listing/<%= listing._id %>?_method=DELETE">
      <button class="btn btn-dark offset-5">Delete</button>
    </form>
  </div>

  <div class="col-8 offset-3 mb-3">
    <hr />
    <h4>Leave a Review</h4>
    <form
      action="/listings/<%= listing._id %>/reviews"
      method="post"
      class="needs-validation"
    >
      <div class="col-8 offset-3 mb-3">
        <label for="rating" class="form-label">Rating</label>
        <fieldset class="starability-slot">
          <legend>First rating:</legend>
          <input
            type="radio"
            id="no-rate"
            class="input-no-rate"
            name="review[rating]"
            value="1"
            checked
            aria-label="No rating."
          />
          <input
            type="radio"
            id="first-rate1"
            name="rating[rating]"
            value="1"
          />
          <label for="first-rate1" title="Terrible">1 star</label>
          <input
            type="radio"
            id="first-rate2"
            name="rating[rating]"
            value="2"
          />
          <label for="first-rate2" title="Not good">2 stars</label>
          <input
            type="radio"
            id="first-rate3"
            name="rating[rating]"
            value="3"
          />
          <label for="first-rate3" title="Average">3 stars</label>
          <input
            type="radio"
            id="first-rate4"
            name="rating[rating]"
            value="4"
          />
          <label for="first-rate4" title="Very good">4 stars</label>
          <input
            type="radio"
            id="first-rate5"
            name="rating[rating]"
            value="5"
          />
          <label for="first-rate5" title="Amazing">5 stars</label>
        </fieldset>
      </div>
      <div class="mb-3 mt-3">
        <label for="comment" class="form-label">Comments</label>
        <textarea
          name="review[comment]"
          id="comment"
          cols="38"
          rows="5"
          class="form-control"
          required
        ></textarea>
        <div class="invalid-feedback">Please add some comments for review</div>
      </div>
      <button class="btn btn-outline-dark">Submit</button>
      <br /><br />
    </form>

    <hr />

    <p><b>All Reviews</b></p>
    <div class="row">
      <% for(review of listing.reviews) { %>
      <div class="card col-5 ms-3 mb-3">
        <div class="card-body">
          <h5 class="card-title">@theycallmecalm</h5>
          <p
            class="starability-result card-text"
            date-rating="<%= review.rating %>"
          ></p>
          <p class="card-text"><%= review.comment %></p>

          <form
            class="mb-3"
            method="post"
            action="/listings/<%= listing._id %>?_method=DELETE"
          >
            <button class="btn btn-sm btn-dark">Delete</button>
          </form>
        </div>
      </div>
      <% } %>
    </div>
  </div>
</div>
